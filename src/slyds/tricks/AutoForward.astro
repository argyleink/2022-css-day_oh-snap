---
import Prism from '/src/utils/Prism.astro'
---

<slyd id="auto-forward">
  <header>
    <h2>Auto Forward</h2>
    <p>By Christian Schaefer</p>
  </header>
  <demo-stage style="max-block-size: 50vh;">
    <Prism lang='css' code={`
      @keyframes slide {
        75%, 99% { top: 0 }
        95%, 98% { top: 100% }
      }
      
      @keyframes snap-toggle {
        96%, 100% { scroll-snap-align: start }
        97%, 99%  { scroll-snap-align: none }
      }
    `}/>
    <div class="auto-forward">
      {[...Array(3)].map((x, i) => ( 
        <section class="auto-forward-slide">
          <div class="auto-forward-sentinel"></div>
          slide {i}
        </section> 
      ))}
    </div>
  </demo-stage>
  <span>Chrome Only</span>
</slyd>